<div class="content p-1">
    <div class="list-group-item">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Lista de Cadastro</h2>
            </div>
            <div class="card-body">
                {{>_msg}}

                {{#if usuario.usuario}}
                <div class="mb-3">
                    <a href="/cliente" class="btn btn-primary">Cadastrar Novo Cliente</a>
                </div>
                {{/if}}

                <div class="table-responsive">

                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th class="d-none d-sm-table-cell">CNPJ/CPF</th>
                                <th class="d-none d-lg-table-cell">E-mail</th>
                                <th class="d-none d-lg-table-cell">Cidade</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clientes}}
                            <tr>
                                <td>{{nome}}</td>
                                <td class="d-none d-sm-table-cell">{{cpf}}</td>
                                <td class="d-none d-lg-table-cell">{{email}}</td>
                                <td class="d-none d-lg-table-cell">{{cidade}}</td>

                                <td class="text-center">
                                    <span class="d-none d-md-block">
                                        <a href="/cliente/edit-cliente/{{idCliente}}" class="btn btn-outline-primary btn-sm">Editar Cadastro</a>
                                        <a href="/cliente/edit-imagens/{{idCliente}}" class="btn btn-outline-warning btn-sm">Documentos</a>
                                        <!-- a href="/corretora/{{idCliente}}" class="btn btn-outline-danger btn-sm">Corretora</a>
                                        <a href="/conta/{{idCliente}}" class="btn btn-outline-success btn-sm">Conta Corrente</a -->
                                        <a href="/cliente/ficha-cliente/{{idCliente}}" class="btn btn-outline-info btn-sm">Ficha</a>
                                    </span>

                                    <div class="dropdown d-block d-md-none">
                                        <button class="btn btn-primary dropdown-toggle btn-sm" type="button"
                                            id="acoesListar" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false"> Ações
                                        </button>

                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                            <a  href="/cliente/edit-cliente/{{idCliente}}" class="btn btn-outline-info btn-sm" >Editar</a>
                                            <a href="/cliente/edit-imagens/{{idCliente}}" class="btn btn-outline-warning btn-sm">Documentos</a>
                                            <!-- a href="/corretora/{{idCliente}}" class="btn btn-outline-danger btn-sm">Corretora</a>
                                            <a href="/conta/{{idCliente}}" class="btn btn-outline-success btn-sm">Conta Corrente</a -->
                                            <a href="/cliente/ficha-cliente/{{idCliente}}" class="btn btn-outline-info btn-sm">Ficha</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        

    </div>
</div>