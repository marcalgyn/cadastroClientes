
<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Inserir Documentos do Cliente</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="#" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>

                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="#">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>

        <form method="POST" action="/cliente/add-imagens" enctype="multipart/form-data">
            <div class="form-group col-md-5">
                <label> Cliente:</label>
                {{#each cliente}}
                <input name="idCliente" id="idCliente" type="hidden" value="{{idCliente}}">
                <h3>{{idCliente}} - {{nome}}</h3>
                {{/each}}
                <!--
                <select name="id" id="id" class="custom-select">
                    {{#each cliente}}
                    <option value="{{idCliente}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhum cliente Cadastrado</option>
                    {{/each}}
                </select>
                -->
                <p></p>

                <label>Tipo de Documento: </label>
                <select class="custom-select" id="documento" name="documento">
                    <option selected>Escolha um documento</option>
                    <option value="cnh">CNPJ/CNH</option>
                    <option value="identidade">IDENTIDADE</option>
                    <option value="cpf">CPF</option>
                    <option value="endereco">ENDEREÇO</option>
                    <option value="outro">OUTROS</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label><span class="text-danger">*</span> Imagem JPEG: (limite 5MB)</label>
                <input name="file" type="file" class="form-control" id="file">
                <p>
                    <span class="text-danger">* </span>Campo obrigatório
                </p>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/cliente/list-clientes" class="btn btn-warning">
                        {{#if usuario.usuario}}
                        Listar Clientes
                        {{else}}
                        Listar Dados
                        {{/if}}
                    </a>
        </form>
    </div>
</div>