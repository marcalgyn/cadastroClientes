        <!-- Navegador de Menus -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="cliente-tab" data-toggle="tab" href="#cliente" role="tab"
                    aria-controls="cliente" aria-selected="true">Cliente</a>
            </li>

