        <div class="tab-content" id="myTabContent">
            <!-- Dados cadastrais do Cliente -->
            <div class="tab-pane fade show active" id="cliente" role="tabpanel" aria-labelledby="cliente-tab">
                <form class="mt-4">
                    <div class="form-group">
                        {{#each cliente}}

                        <div class="row">
                            <div class="col-md-1">
                                <label>ID: {{idCliente}}</label>
                            </div>

                            <div class="col-md-2">
                                <label>Nome: {{nome}}</label>
                            </div>

                            <div class="col-md-2">
                                <label>CNPJ/CPF: {{cpf}}</label>
                            </div>

                            <div class="col-md-2">
                                <label>I.E:</label>
                                <label>{{identidade}}</label>
                            </div>

                            <div class="col-md-3">
                                <label>Dt. Constituição:</label>
                                <label id="dtNascimento" name="idNascimento">{{dtNascimento}}</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <label>Telefone: {{telefone}}</label>
                            </div>
                            <div class="col-md-3">
                                <label>E-mail: {{email}}</label>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-4">
                                <label>Endereço: {{endereco}}</label>
                            </div>

                            <div class="col-md-3">
                                <label>Bairro: {{bairro}}</label>
                            </div>

                            <div class="col-md-3">
                                <label>Cidade-UF: {{cidade}} - {{estado}}</label>
                            </div>

                            <div class="col-md-2">
                                <label>Cep:</label>
                                <label>{{cep}}</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <label>Usuario: {{usuario}}</label>
                            </div>

                            <div class="col-md-4">
                                <label>Valor Mensal: {{valorInvestido}}</label>
                            </div>

                            <div class="col-md-3">
                                <label>Data Cadastro: {{dtcadastro}}</label>
                            </div>

                            <!-- div class="col-md-2">
                                <label>Conta: {{tipoConta}} - (Conjunta, Individual)</label>
                            </div -->

                        </div>
                        {{/each}}
                    </div>
                </form>
            </div>

