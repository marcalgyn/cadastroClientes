<div class="form-group d-flex justify-content-center">
    <form class="form-signin text-center" action="/cliente/signup" method="POST">
        <a href="/">
            <img src="/images/login.jpeg" alt="Win2Tech" width="100%" height="110">
        </a>
        <h1 class="h3 mb-3 font-weight-normal">Cadastro</h1>

        {{>_msg}}

        <div class="form-group">
            <input name="nome" type="text" class="form-control" placeholder="Digite seu Nome"
             
            onkeyup="this.value = this.value.toUpperCase();" required>
        </div>

        <div class="form-group">
            <input name="email" type="email" class="form-control" style="text-transform: lowercase;"
                placeholder="Digite o E-mail" onkeyup="this.value = this.value.toLowerCase();" required>
        </div>
        <div class="form-group">
            <input name="senha" type="password" class="form-control" placeholder="Digite a Senha" required>
        </div>
        <div class="form-group">
            <input name="confirmeSenha" type="password" class="form-control" placeholder="Confirme a Senha" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Cadastrar</button>
        
        

        <a class="text-center" href="/usuario/login" style="text-decoration: none;">JÃ¡ tem cadastrado? Acesse o
            Login!</a>
    </form>
</div>