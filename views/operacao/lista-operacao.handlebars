<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Lista de Operações</h2>
            </div>
        </div>

        {{>_msg}}

        <hr>

        <span class="d-none d-md-block">
            <a href="/operacao" class="btn btn-outline-primary btn-sm">Inserir</a>
        </span>

        <div class="table-responsive">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <!--<th>ID</th>-->
                        <th>Id</th>
                        <th class="d-none d-sm-table-cell">Cliente</th>
                        <th class="d-none d-lg-table-cell">Tipo Operação</th>
                        <th class="d-none d-lg-table-cell">Data Operação</th>
                        <th class="d-none d-lg-table-cell">Valor</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each operacao}}
                    <tr>
                        <!--<th>{{_id}}</th>-->
                        <input name="idCliente" id="idCliente" type="hidden" value="{{operacao.idCliente}}">
                        <td>{{idOperacao}}</td>
                        <td class="d-none d-sm-table-cell">{{idCliente}}-{{nome}}</td>
                        <td class="d-none d-lg-table-cell">{{tipoOperacao}}</td>
                        <td class="d-none d-lg-table-cell">{{moment dataOperacao 'DD/MM/YYYY'}}</td>
                        <td class="d-none d-lg-table-cell">{{formatNumber valor style="currency" currency="USD"}}</td>

                        <td class="text-center">

                            <span class="d-none d-md-block">
                                <a href="/operacao/del-operacao/{{idOperacao}}"
                                    class="btn btn-outline-danger btn-sm">Excluir</a>

                            </span>

                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>

                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a href="/operacao/deletar-operacao/{{idOperacao}}"
                                        class="btn btn-outline-danger btn-sm">Excluir</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if operacao.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/operacao/lista-operacao" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/operacao/lista-operacao?page={{operacao.prevPage}}">{{operacao.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{operacao.page}}</a>
                    </li>

                    {{#if operacao.hasNextPage}}
                    <li class="page-item ">
                        <a class="page-link"
                            href="/operacao/lista-operacao?page={{operacao.nextPage}}">{{operacao.nextPage}}</a>
                    </li>

                    <li class="page-item ">
                        <a class="page-link" href="/operacao/lista-operacao?page={{operacao.totalPages}}">Proxima</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>

        </div>
    </div>
</div>